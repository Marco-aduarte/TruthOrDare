<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:id="@+id/game_question_view"
    tools:context=".Game_Question">


    <ImageView
        android:id="@+id/Imagemoji_question"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option"
        tools:src="@tools:sample/avatars" />


    <Button
        android:id="@+id/addQuestion"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="37dp"
        android:background="@mipmap/plus_4_512"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add2Question"


        />

    <Button
        android:id="@+id/add2Question"
        android:layout_width="93dp"
        android:layout_height="17dp"
        android:layout_marginStart="155dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="39dp"
        android:fontFamily="@font/lato_bold"
        android:background="@android:color/transparent"
        android:textAllCaps="false"
        android:text="Forfeit Round"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.696"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nextRound"
        android:layout_width="0dp"
        android:layout_height="83dp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/black_button"
        android:fontFamily="@font/lato_bold"
        android:text="Next Round"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="33sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/question"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:fontFamily="@font/lato_bold"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Imagemoji_question" />

    <TextView
        android:id="@+id/option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPopup_question"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="67dp"
        android:background="@drawable/back_and_settings_layout"
        android:foreground="@mipmap/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/button_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:orientation="vertical">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/question_settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:foreground="@mipmap/settings"
            android:layout_gravity="center"
            app:backgroundTint="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/main_language"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:backgroundTint="#ffffff"
            android:foreground="@mipmap/portugal"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            app:fabCustomSize="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/main_ads"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:background="@drawable/button_settings"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#ffffff"
            android:foreground="@mipmap/bloqueado"
            android:visibility="gone"
            app:fabCustomSize="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/drinkButton"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/frame_00"
        app:layout_constraintBottom_toTopOf="@+id/nextRound"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>