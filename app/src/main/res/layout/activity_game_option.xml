<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:id="@+id/game_option_view"
    tools:context=".Game_Option">


    <Button
        android:id="@+id/truth"
        android:layout_width="0dp"
        android:layout_height="83dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/white_button"
        android:fontFamily="@font/lato_bold"
        android:text="Truth!"
        android:textAllCaps="false"
        android:textColor="#202030"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/dare"
        app:layout_constraintEnd_toEndOf="@+id/dare"
        app:layout_constraintStart_toStartOf="@+id/dare" />

    <Button
        android:id="@+id/dare"
        android:layout_width="297dp"
        android:layout_height="83dp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="156dp"
        android:background="@drawable/black_button"
        android:fontFamily="@font/lato_bold"
        android:text="Dare!"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/currentPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="83dp"
        android:fontFamily="@font/lato_bold"
        android:text="It's Someone!"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="29dp"
        app:layout_constraintBottom_toTopOf="@+id/truth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addOption"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="37dp"
        android:background="@mipmap/plus_4_512"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add2Option" />

    <Button
        android:id="@+id/add2Option"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginStart="155dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="39dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/lato_bold"
        android:text="Forfeit Round"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonPopup_option"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="67dp"
        android:background="@drawable/back_and_settings_layout"
        android:foreground="@mipmap/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/button_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:orientation="vertical">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/option_settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:foreground="@mipmap/settings"
            android:layout_gravity="center"
            app:backgroundTint="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/main_language"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:backgroundTint="#ffffff"
            android:foreground="@mipmap/portugal"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            app:fabCustomSize="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/main_ads"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:background="@drawable/button_settings"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#ffffff"
            android:foreground="@mipmap/bloqueado"
            android:visibility="gone"
            app:fabCustomSize="90dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>


    <ImageView
        android:id="@+id/Imagemoji_option"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="153dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="53dp"
        app:layout_constraintBottom_toTopOf="@+id/currentPlayer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>